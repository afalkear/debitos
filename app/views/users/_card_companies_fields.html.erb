<div class="nested-fields">
  <table class="table table-condensed">
    <tr>
      <td>Name</td>
      <td>
        <%= f.input :name,
                    collection: [["VISA", "visa"],["MASTERCARD", "master"],["AMERICAN EXPRESS", "american"]],
                    label: false,
                    include_blank: false %>
      </td>
      <td>Establishment</td>
      <td>
        <%= f.input :establishment, label: false do %>
          <%= f.input_field :establishment %>
        <% end %>
      </td>
      <td>
        <%= f.input :description do %>
          <%= f.input_field :description %>
        <% end -%>
      </td>
      <td>
        <%= link_to_remove_association "Remove Card Company", f %>
      </td>
    </tr>
  </table>
</div>
