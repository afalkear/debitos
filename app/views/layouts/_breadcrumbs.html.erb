<div class="btn-group btn-breadcrumb">
  <button class="btn btn-<%= alert %>" disabled="disabled">
    <% if type == "Configuration" %>
      <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
    <% elsif type == "Summary" %>
      <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
    <% end %>
    <%= type %>
  </button>
  <% pages.each do |page| %>
    <% if page[:path].blank? %>
      <button class="btn btn-<%= alert %> active"> <%= page[:name] %> </button>
    <% else %>
      <%= link_to page[:name], page[:path], class: "btn btn-#{alert}" %>
    <% end %>
  <% end %>
</div>