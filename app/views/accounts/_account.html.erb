<div class="row">
  <div class="col-md-5">
    <h3><%= account.padma.full_name.blank? ? account.name.humanize : account.padma.full_name %></h3>
    <div class="row">
      <% if account.ready_for_summary? %>
        <div class="col-md-12 success">
          Ready
        </div>
      <% else %>
        <div class="col-md-12 warning">
          Not ready
        </div>
      <% end %>
    </div>
  </div>
  <div class="col-md-7">
    <%= link_to alumnos_path, class: "btn btn-primary btn-lg btn-block #{account.ready_for_summary? ? "" : 'disabled'}" do %>
      <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> New Presentation
    <% end %>
    <%= link_to alumnos_path, class: "btn btn-info btn-lg btn-block" do %>
      <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Edit account data
    <% end %>
    <%= link_to alumnos_path, class: "btn btn-info btn-lg btn-block" do %>
      <span class="glyphicon glyphicon-transfer" aria-hidden="true"></span> Import/Export data
    <% end %>
    <%= link_to alumnos_path, class: "btn btn-danger btn-lg btn-block" do %>
      <span class="glyphicon glyphicon-trash" aria-hidden="true"></span> Delete database
    <% end %>
  </div>
</div>